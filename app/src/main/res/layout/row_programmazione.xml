<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewProgrammazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="582dp">

            <ImageView
                android:id="@+id/imagePoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewTitoloProgrammazione"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/locandina" />

            <TextView
                android:id="@+id/textViewTitoloProgrammazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="201dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewOrario1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textViewTitoloProgrammazione"
                android:layout_marginStart="15dp"
                android:layout_marginTop="21dp"
                android:text="Orario 1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewOrario2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewOrario1Text"
                android:layout_below="@+id/textViewOrario1Text"
                android:layout_marginTop="19dp"
                android:text="Orario 2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewOrario3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewOrario2Text"
                android:layout_below="@+id/textViewOrario2Text"
                android:layout_marginTop="20dp"
                android:text="Orario 3"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewOrario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewOrario1Text"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/textViewOrario1Text"
                android:text="TextView"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textViewOrario2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewOrario2Text"
                android:layout_alignStart="@+id/textViewOrario1"
                android:text="TextView"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textViewOrario3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewSalaText"
                android:layout_alignStart="@+id/textViewOrario2"
                android:text="TextView"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textViewSalaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewOrario3Text"
                android:layout_alignStart="@+id/textViewOrario3Text"
                android:layout_below="@+id/textViewOrario3Text"
                android:layout_marginTop="20dp"
                android:text="Sala"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewSalaText"
                android:layout_alignStart="@+id/textViewOrario3"
                android:text="TextView"
                android:textAlignment="textEnd" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>