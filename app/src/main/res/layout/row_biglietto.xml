<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageBiglietto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/coins" />

            <TextView
                android:id="@+id/textViewTipoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/tipoBiglietto"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_alignBaseline="@+id/textViewTipoText"
                android:layout_alignBottom="@+id/textViewTipoText"
                android:layout_alignStart="@+id/textViewPrezzo" />

            <TextView
                android:id="@+id/textViewPrezzoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewTipoText"
                android:layout_below="@+id/textViewTipoText"
                android:layout_toStartOf="@+id/textViewTipo"
                android:text="@string/prezzoBiglietto"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewPrezzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textAlignment="textEnd"
                android:layout_alignBaseline="@+id/textViewPrezzoText"
                android:layout_alignBottom="@+id/textViewPrezzoText"
                android:layout_toEndOf="@+id/textViewTipoText" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>